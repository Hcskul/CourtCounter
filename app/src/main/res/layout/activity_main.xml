<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/Team_Margin_Vertic"
                android:fontFamily="@string/Team_Style"
                android:gravity="center"
                android:text="@string/Team_A"
                android:textColor="@color/colorTeam"
                android:textSize="@dimen/Team_Size" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Score_Margin_Bottom"
                android:fontFamily="@string/Score_Style"
                android:gravity="center"
                android:text="@string/Init_A"
                android:textColor="@color/black"
                android:textSize="@dimen/Score_Size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:onClick="threePointsTeamA"
                android:text="@string/Button_3Points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:layout_marginVertical="@dimen/Button_2_Margin_Vert"
                android:onClick="twoPointsTeamA"
                android:text="@string/Button_2Points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:onClick="freethrowTeamA"
                android:text="@string/Button_Freethr" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/Separator"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/Team_Margin_Vertic"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/Team_Margin_Vertic"
                android:fontFamily="@string/Team_Style"
                android:gravity="center"
                android:text="@string/Team_B"
                android:textColor="@color/colorTeam"
                android:textSize="@dimen/Team_Size" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Score_Margin_Bottom"
                android:fontFamily="@string/Score_Style"
                android:gravity="center"
                android:text="@string/Init_A"
                android:textColor="@color/black"
                android:textSize="@dimen/Score_Size" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:onClick="threePointsTeamB"
                android:text="@string/Button_3Points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:layout_marginVertical="@dimen/Button_2_Margin_Vert"
                android:onClick="twoPointsTeamB"
                android:text="@string/Button_2Points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/Button_Margin_Hori"
                android:onClick="freethrowTeamB"
                android:text="@string/Button_Freethr" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Button_Reset_Margin"
            android:onClick="reset"
            android:text="@string/Button_Reset" />

    </LinearLayout>


</RelativeLayout>
